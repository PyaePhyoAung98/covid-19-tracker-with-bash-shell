#!/usr/bin/env bash
echo "Enter Country code"
read code
echo "Enter Country Name"
read name
res=`curl -s https://corona-stats.online/$code\?source\=2 \
  | grep $name \
  | sed 's/\s*//g ; s/â•‘//g ; s/â”‚/; /g ; s/ //g ; s/\x1b\[[0-9;]*m//g' \
  | awk -F';' '{print "ğŸ˜·: " $3 ","} {print "ğŸ¤’:" $8 ","} {print "ğŸ˜Š:" $7 ","}  {print "ğŸ’€: " $5}'`

echo $res

